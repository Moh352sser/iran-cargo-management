<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light_gray">

    <!-- App Bar -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/primary_navy"
            app:titleTextColor="@color/text_white" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Main Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Trip Information Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/CustomCardStyle"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/trip_details"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="16dp" />

                    <!-- Origin -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/originInputLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        style="@style/CustomTextInputLayoutStyle"
                        app:startIconDrawable="@drawable/ic_location">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/originEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/origin"
                            android:inputType="text"
                            android:maxLines="1" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Destination -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/destinationInputLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        style="@style/CustomTextInputLayoutStyle"
                        app:startIconDrawable="@drawable/ic_destination">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/destinationEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/destination"
                            android:inputType="text"
                            android:maxLines="1" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Cargo Type -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/cargoTypeInputLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        style="@style/CustomTextInputLayoutStyle"
                        app:startIconDrawable="@drawable/ic_cargo">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/cargoTypeEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/cargo_type"
                            android:inputType="text"
                            android:maxLines="1" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Cargo Weight -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/cargoWeightInputLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        style="@style/CustomTextInputLayoutStyle"
                        app:startIconDrawable="@drawable/ic_weight"
                        app:suffixText="kg">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/cargoWeightEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/cargo_weight"
                            android:inputType="numberDecimal"
                            android:maxLines="1" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Driver Name -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/driverNameInputLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        style="@style/CustomTextInputLayoutStyle"
                        app:startIconDrawable="@drawable/ic_person">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/driverNameEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/driver_name"
                            android:inputType="textPersonName"
                            android:maxLines="1" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Vehicle Number -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/vehicleNumberInputLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        style="@style/CustomTextInputLayoutStyle"
                        app:startIconDrawable="@drawable/ic_truck">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/vehicleNumberEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/vehicle_number"
                            android:inputType="text"
                            android:maxLines="1" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Date/Time Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/CustomCardStyle"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="زمان‌بندی سفر"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="16dp" />

                    <!-- Departure Time -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/departure_time"
                            android:textSize="16sp"
                            android:textColor="@color/text_primary"
                            android:layout_weight="1" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/departureTimeButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="انتخاب زمان"
                            style="@style/SecondaryButtonStyle"
                            app:icon="@drawable/ic_calendar" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/departureTimeText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="زمان حرکت انتخاب نشده"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary"
                        android:background="@color/input_background"
                        android:padding="12dp"
                        android:layout_marginBottom="16dp" />

                    <!-- Arrival Time -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/arrival_time"
                            android:textSize="16sp"
                            android:textColor="@color/text_primary"
                            android:layout_weight="1" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/arrivalTimeButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="انتخاب زمان"
                            style="@style/SecondaryButtonStyle"
                            app:icon="@drawable/ic_calendar" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/arrivalTimeText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="زمان رسیدن انتخاب نشده (اختیاری)"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary"
                        android:background="@color/input_background"
                        android:padding="12dp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Notes Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/CustomCardStyle"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="یادداشت‌ها"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="16dp" />

                    <!-- Notes -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/notesInputLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/CustomTextInputLayoutStyle"
                        app:startIconDrawable="@drawable/ic_note">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/notesEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="یادداشت‌های اضافی (اختیاری)"
                            android:inputType="textMultiLine"
                            android:maxLines="3"
                            android:gravity="start" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Save Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/saveButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/save"
                style="@style/CustomButtonStyle"
                app:icon="@drawable/ic_save"
                android:layout_marginTop="8dp" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>